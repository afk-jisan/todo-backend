{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "api/routes/**",
          "node_modules/swagger-ui-dist/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api-docs",
      "destination": "/api/index.js"
    },
    {
      "source": "/api-docs/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "routes": [
    {
      "src": "/api-docs.json",
      "dest": "/api/index.js"
    }
  ]
}